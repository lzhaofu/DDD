@using DDD.Domain.Model.Entities.Admin
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>后台管理系统</title>
    <link rel="Shortcut Icon" href="@Url.Content("~/favicon.ico")" />
    <link href="@Url.Content("~/Content/css/sys.css")" rel="stylesheet" type="text/css" />
    <link  href="@Url.Content("~/Content/css/pub.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.11.2.min.js")" type="text/javascript"></script>
</head>
<body style="overflow: hidden; padding: 0; margin: 0;">
    <div id='frmloading' class="loading-box">
        <img class="loading-qj" src="@Url.Content("~/Content/images/load.gif")" alt="加载" />
        <span class="loading-wz">正在加载...</span>
        <div class="clear"></div>
    </div>
    <iframe id="PFrame" style="width: 100%; border: 0;"></iframe>
    <script type="text/javascript">
        var reinitIframe = function () {
            var rframe = $("#PFrame");
            var h = $(window).height() - rframe.offset().top;
            rframe.height(h);
        };
        //注册加载事件
        //$("#PFrame").load(reinitIframe); //30版本的chrome 无效了 2013年10月14日 15:19:23
        $(function () {
            reinitIframe();
        });
        //注册窗体改变大小事件
        $(window).resize(reinitIframe);
        $("#PFrame").attr("src", "/Home/IndexFrame");
    </script>
</body>
</html>
